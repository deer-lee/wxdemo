<!--pages/createAccountNumber/index.wxml-->
<view class="container">
  <view class='logo-panel'>
    <image class='logo-image' src='../../resources/img/login/logo.png'></image>
  </view>
  <form class='account-form' bindsubmit='submitAccount'>
    <view class='account-input-panel'>
      <text class='account-input-title'>手机</text>
      <input class='account-input' placeholder-class="placeholder-class" type="number" name="phoneNum" placeholder="请输入手机号" maxlength='11' bindinput="bindKeyInput"></input>
    </view>
    <view class='account-input-panel account-input-verification-code-panel'>
      <view class='account-code-input-panel-left'>
        <text class='account-input-title'>手机验证码</text>
        <input class='account-input' placeholder-class="placeholder-class" type="number" name="identifyCode" placeholder="请输入手机验证码"></input>
      </view>
      <!--<button class='account-code-button' bindtap='identifyCode'>发送验证码</button>-->
      <button class='account-code-button' disabled="{{btnDisabled}}" bindtap='identifyCode'>{{time}}</button>
    </view>
    <view class='account-input-panel'>
      <text class='account-input-title'>设置密码</text>
      <input class='account-input' placeholder-class="placeholder-class" password="true" name="password" placeholder="6-14位字母数字组合" ></input>
    </view>
    <button class='account-submit-button' form-type="submit" disabled="{{btnLoading}}" loading="{{btnLoading}}">
      <text class='account-submit-button-text'>确认</text>
    </button>
    <view class='account-user-protocol-panel'>
      <checkbox-group bindchange="checkboxChange" class="account-user-protocol-checkbox">
        <view wx:for="{{items}}" wx:key="{{index}}">
          <checkbox checked="{{item.checked}}"/>
        </view>
      </checkbox-group>
      <!--<checkbox class='account-user-protocol-checkbox' value="true" checked="{{agreement}}" bindtap="agreementFn"/>-->
      <text class='account-user-protocol-text'>我已阅读并同意</text>
      <navigator url="../userProtocol/index" hover-class="navigator-hover">
        <text class='account-user-protocol-link'>《用户服务协议》</text>
      </navigator>
    </view>
  </form>
</view>

