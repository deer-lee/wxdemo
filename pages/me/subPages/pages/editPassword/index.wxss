/* pages/forgetPassword/index.wxss */
.container {
  background-color: #fff;
  padding: 0 70rpx;
  align-items: left;
}
.titleCon{
  margin-top: 50rpx;
  margin-bottom: 125rpx;
  font-size: 42rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 42rpx;
}
.formCon{
  width: 100%;
}
.itemCon{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  justify-content: center;
  margin-bottom: 40rpx;
}
.topTitle{
  font-size: 26rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 26rpx;
  margin-bottom: 42rpx;
}
.inputCon{
  width: 100%;
  border-bottom: 1rpx solid #EAEAEA;
}
.placeholder-class{
  font-size: 28rpx;
  color: #CCCCCC;
  letter-spacing: 0;
  line-height: 28rpx;
}
.submitBtn{
  width: 100%;
  height: 88rpx;
  margin-top: 80rpx;
  background: #5B6DF8;
  border: 1rpx solid rgba(219,223,227,0.30);
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.submitBtnText{
  font-size: 30rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 28rpx;
}