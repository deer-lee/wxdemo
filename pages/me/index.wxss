.container{
    padding: 0 26rpx;
}
.personCon{
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background: #FFFFFF;
    border: 1rpx solid rgba(219,223,227,0.30);
    box-shadow: 0 0 20px 0 rgba(0,0,0,0.04), 0 20px 31px 0 rgba(0,0,0,0.16);
    border-radius: 12rpx;
    position: relative;
    margin-top: 100rpx;
    margin-bottom: 60rpx;
}
.personhead{
    width: 158rpx;
    height: 158rpx;
    position: absolute;
    top: -70rpx;
}
.personName{
    margin:0 20rpx;
    font-size: 42rpx;
    color: #000000;
    letter-spacing: 0;
    line-height: 48rpx;
}
.personCompany{
    font-size: 28rpx;
    color: #999999;
    letter-spacing: 0;
}
.input-cell{
    width: 100%;
}