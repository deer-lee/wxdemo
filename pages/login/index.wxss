/* pages/login/index.wxss */
.container {
  background-color: #fff;
  align-items: left;
  padding: 0 70rpx;
}
.logo-con image{
  width: 280rpx;
  height: 84rpx;
  margin-top: 50rpx;
  margin-bottom: 97rpx;
}
.title-con{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  margin-bottom: 80rpx;
}
.text-top{
  font-family: PingFangSC-Semibold;
  font-size: 42rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 42rpx;
  margin-bottom: 18rpx;
}
.text-bot{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #B8B8B8;
  letter-spacing: 0;
  line-height: 28rpx;
}
.login-form {
  width: 100%;
}
.login-input-con{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #EAEAEA;
}
.login-input-title{
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 26rpx;
  margin-bottom: 42rpx;
}
.login-input{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #000000;
  letter-spacing: 0;
  line-height: 28rpx;
}
.placeholder-class{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #CCCCCC;
  letter-spacing: 0;
  line-height: 28rpx;
}
.login-submit-button{
  width: 100%;
  height: 88rpx;
  background: #5B6DF8;
  border: 1rpx solid rgba(219,223,227,0.30);
  border-radius: 12rpx;
  margin-top: 80rpx;
  margin-bottom: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-submit-button-text{
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  line-height: 28rpx;
}
.login-link-panel{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-link-forgetPassword{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #5B6DF8;
  letter-spacing: 0;
  line-height: 28rpx;
}